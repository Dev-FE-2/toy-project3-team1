{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-case": [0, "always", "lower-case"],
    "type-empty": [0, "never"],
    "type-enum": [
      1,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "test", "setting"]
    ],
    "subject-empty": [0, "never"],
    "subject-full-stop": [0, "never", "."],
    "subject-case": [0, "never"]
  }
}
